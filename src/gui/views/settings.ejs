<%- include('partials/header') %>

<div class="flex-1 overflow-y-auto p-4 md:p-8">
    <div class="max-w-5xl mx-auto space-y-8 mt-12">
        <div class="flex flex-col gap-2 mb-8">
            <h2 class="text-3xl font-bold text-white tracking-tight leading-none mb-1">Node Configuration</h2>
            <p class="text-zinc-500 text-sm">Manage network connectivity and P2P synchronization settings.</p>
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
            <!-- Port Settings -->
            <div class="bg-zinc-900 border border-zinc-800 rounded-3xl p-8 shadow-2xl space-y-8">
                <h3 class="font-bold text-lg text-white flex items-center gap-3">
                    <i class="fa-solid fa-sliders text-green-500"></i>
                    Network Ports
                </h3>
                <form id="config-form" class="space-y-6">
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <div class="space-y-3">
                            <label class="block text-[10px] font-bold text-zinc-500 uppercase tracking-widest px-1">HTTP API PORT</label>
                            <input type="number" name="HTTP_PORT" value="<%= config.HTTP_PORT %>" 
                                class="w-full bg-zinc-950 border border-zinc-800 rounded-2xl p-4 text-sm font-bold text-white focus:ring-2 focus:ring-green-500 outline-none transition-all">
                        </div>
                        <div class="space-y-3">
                            <label class="block text-[10px] font-bold text-zinc-500 uppercase tracking-widest px-1">P2P SERVER PORT</label>
                            <input type="number" name="P2P_PORT" value="<%= config.P2P_PORT %>" 
                                class="w-full bg-zinc-950 border border-zinc-800 rounded-2xl p-4 text-sm font-bold text-white focus:ring-2 focus:ring-green-500 outline-none transition-all">
                        </div>
                    </div>
                    <div class="bg-zinc-950/50 p-4 rounded-xl border border-zinc-800 border-dashed text-[10px] text-zinc-500 italic">
                        Node restarts are required for port changes to take effect in some environments.
                    </div>
                    <button type="submit" class="w-full py-4 bg-zinc-800 hover:bg-zinc-700 text-zinc-200 rounded-2xl font-bold text-xs uppercase tracking-widest transition-all border border-zinc-700 shadow-lg active:scale-95">
                        Save Configuration
                    </button>
                </form>
            </div>

            <!-- Peers Explorer -->
            <div class="bg-zinc-900 border border-zinc-800 rounded-3xl p-8 shadow-2xl flex flex-col">
                <div class="flex items-center justify-between mb-8">
                    <h3 class="font-bold text-lg text-white flex items-center gap-3">
                        <i class="fa-solid fa-network-wired text-green-500"></i>
                        P2P Connection Explorer
                    </h3>
                    <span class="text-[10px] font-bold bg-green-500/10 text-green-500 px-3 py-1 rounded-full border border-green-500/20">
                        <%= nodeStatus.peers %> ACTIVE NODES
                    </span>
                </div>

                <div class="flex-1 space-y-4 mb-8 overflow-y-auto max-h-[300px] pr-2 custom-scrollbar">
                    <% if (peersList.length > 0) { %>
                        <% peersList.forEach(peer => { %>
                            <div class="flex items-center justify-between p-4 bg-zinc-950/80 rounded-2xl border border-zinc-800 hover:border-green-500/30 transition-all">
                                <div class="flex items-center gap-4">
                                    <div class="relative">
                                        <div class="w-8 h-8 bg-zinc-800 rounded-lg flex items-center justify-center text-zinc-500">
                                            <i class="fa-solid fa-server text-xs"></i>
                                        </div>
                                        <div class="absolute -right-1 -top-1 w-3 h-3 bg-green-500 rounded-full border-2 border-zinc-900 shadow-sm animate-pulse"></div>
                                    </div>
                                    <div class="flex flex-col">
                                        <span class="font-mono text-[11px] font-bold text-zinc-300"><%= peer %></span>
                                        <span class="text-[9px] text-zinc-600 font-bold uppercase tracking-widest">Handshake Complete</span>
                                    </div>
                                </div>
                                <button class="text-zinc-700 hover:text-red-500 p-2 transition-colors">
                                     <i class="fa-solid fa-link-slash"></i>
                                </button>
                            </div>
                        <% }) %>
                    <% } else { %>
                        <div class="flex flex-col items-center justify-center py-12 text-zinc-600 border border-zinc-800 border-dashed rounded-2xl opacity-50">
                            <i class="fa-solid fa-wifi-slash text-3xl mb-3"></i>
                            <span class="text-xs font-bold uppercase tracking-widest">No Active Peers</span>
                        </div>
                    <% } %>
                </div>

                <form id="connect-peer-form" class="flex gap-2">
                    <input type="text" name="peer" placeholder="/ip4/127.0.0.1/tcp/5001/p2p/Qm..." required 
                        class="flex-1 bg-zinc-950 border border-zinc-800 rounded-2xl px-6 py-4 text-xs font-bold text-zinc-200 focus:ring-2 focus:ring-green-500 outline-none transition-all shadow-inner">
                    <button type="submit" class="py-4 px-8 bg-green-600 hover:bg-green-500 text-white rounded-2xl text-[10px] font-bold uppercase tracking-widest transition-all shadow-xl shadow-green-900/20 active:scale-95">
                        Link Peer
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    document.getElementById('connect-peer-form').addEventListener('submit', async (e) => {
        e.preventDefault();
        const peer = e.target.peer.value;
        const btn = e.target.querySelector('button');
        const originalText = btn.innerText;
        
        btn.innerText = "Connecting...";
        btn.disabled = true;

        try {
            const res = await fetch('/net-connect', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ peer })
            });
            const data = await res.json();
            
            if (res.ok) {
                alert(`✅ Connected to peer!`);
                window.location.reload();
            } else {
                throw new Error(data.error || 'Connection failed');
            }
        } catch (e) {
            alert(`❌ Error: ${e.message}`);
        } finally {
            btn.innerText = originalText;
            btn.disabled = false;
        }
    });

    // Also handle config form
    document.getElementById('config-form').addEventListener('submit', async (e) => {
        e.preventDefault();
        const HTTP_PORT = e.target.HTTP_PORT.value;
        const P2P_PORT = e.target.P2P_PORT.value;
        
        try {
            const res = await fetch('/api/config', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ HTTP_PORT, P2P_PORT })
            }); // Note: ConfigManager might not support saving ports yet? 
            // src/gui/server.js calls ConfigManager.save(req.body).
            // Let's assume ConfigManager handles unknown keys gracefully or saves them.
            // But wait, ports are usuall ENV variables, not saved in config.json?
            // ConfigManager loads src/config.js values? No, src/config/manager.js loads json file.
            // So this works if ports are in config.json.
            
            const data = await res.json();
            alert(data.message || 'Configuration saved');
        } catch (e) {
            console.error(e);
            alert('Failed to save config');
        }
    });
</script>

<%- include('partials/footer') %>
