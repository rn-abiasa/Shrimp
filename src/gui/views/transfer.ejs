<%- include('partials/header') %>

<div class="flex-1 overflow-y-auto p-4 md:p-8">
    <div class="max-w-3xl mx-auto space-y-8 mt-12">
        <div class="flex flex-col gap-2 mb-8 text-center">
            <h2 class="text-4xl font-extrabold text-white tracking-tight">Send Transaction</h2>
            <p class="text-zinc-500 text-sm">Move SHRIMP tokens across the network instantly and securely.</p>
        </div>

        <% if (walletDetails) { %>
            <div class="bg-zinc-900 border border-zinc-800 rounded-[32px] overflow-hidden shadow-2xl">
                <!-- Balance Header -->
                <div class="p-8 bg-gradient-to-r from-emerald-600 to-teal-700 flex flex-col items-center justify-center text-white relative">
                    <div class="absolute -left-12 -top-12 w-48 h-48 bg-white opacity-5 rounded-full blur-3xl"></div>
                    <span class="text-[10px] font-bold uppercase tracking-widest opacity-80 mb-2">Available Balance</span>
                    <div class="flex items-baseline gap-2">
                        <span class="text-5xl font-extrabold"><%= walletDetails.balance %></span>
                        <span class="text-lg font-bold opacity-60">SHRIMP</span>
                    </div>
                </div>

                <!-- Form -->
                <div class="p-8 md:p-12 space-y-8">
                    <form id="transfer-form" class="space-y-8">
                        <input type="hidden" name="walletName" value="<%= walletDetails.name %>">
                        <input type="hidden" name="currentBalance" value="<%= walletDetails.balance %>">
                        
                        <!-- From (Read only) -->
                        <div class="space-y-3">
                            <label class="block text-[10px] font-bold text-zinc-500 uppercase tracking-widest px-1">SENDER ACCOUNT</label>
                            <div class="flex items-center gap-4 bg-zinc-950 p-4 rounded-2xl border border-zinc-800 opacity-80">
                                <div class="w-10 h-10 bg-zinc-800 rounded-xl flex items-center justify-center text-zinc-400 font-bold">
                                    <i class="fa-solid fa-user-shield text-xs"></i>
                                </div>
                                <div>
                                    <div class="text-sm font-bold text-zinc-300"><%= walletDetails.name %></div>
                                    <div class="text-[10px] font-mono text-zinc-500 truncate max-w-[200px]"><%= walletDetails.address %></div>
                                </div>
                            </div>
                        </div>

                        <!-- Recipient -->
                        <div class="space-y-3">
                            <label class="block text-[10px] font-bold text-zinc-500 uppercase tracking-widest px-1">RECIPIENT ADDRESS</label>
                            <div class="relative group">
                                <input type="text" name="recipient" placeholder="Enter peer public address..." required 
                                    class="w-full bg-zinc-950 border border-zinc-800 rounded-2xl p-5 text-sm focus:ring-2 focus:ring-green-500 focus:border-green-500 outline-none transition-all pr-14 font-mono text-zinc-200 placeholder:text-zinc-700">
                                <div class="absolute right-5 top-1/2 -translate-y-1/2 text-zinc-700 transition-colors group-focus-within:text-green-500">
                                    <i class="fa-solid fa-passport text-xl"></i>
                                </div>
                            </div>
                            <p class="text-[10px] text-zinc-600 px-1">Tip: double check the public address to avoid losing tokens.</p>
                        </div>

                        <!-- Amount & Fee Grid -->
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                            <!-- Amount -->
                            <div class="space-y-3">
                                <label class="block text-[10px] font-bold text-zinc-500 uppercase tracking-widest px-1">AMOUNT TO SEND</label>
                                <div class="relative group">
                                    <input type="number" name="amount" step="0.000001" placeholder="0.000000" required 
                                        class="w-full bg-zinc-950 border border-zinc-800 rounded-2xl p-5 text-2xl focus:ring-2 focus:ring-green-500 focus:border-green-500 outline-none transition-all font-mono font-bold text-white placeholder:text-zinc-800">
                                    <div class="absolute right-5 top-1/2 -translate-y-1/2 flex items-center gap-3">
                                        <button type="button" onclick="const input = this.closest('.group').querySelector('input'); input.value = '<%= walletDetails.balance %>';" 
                                            class="px-4 py-2 bg-zinc-800 hover:bg-zinc-700 rounded-xl text-[10px] font-bold text-zinc-300 uppercase transition-colors border border-zinc-700">Max</button>
                                        <span class="text-sm font-bold text-zinc-600">SHRIMP</span>
                                    </div>
                                </div>
                            </div>

                            <!-- Fee -->
                            <div class="space-y-3">
                                <label class="block text-[10px] font-bold text-zinc-500 uppercase tracking-widest px-1">TRANSACTION FEE (Optional)</label>
                                <div class="relative group">
                                    <input type="number" name="fee" step="0.000001" value="0.000001" placeholder="0.000000" 
                                        class="w-full bg-zinc-950 border border-zinc-800 rounded-2xl p-5 text-2xl focus:ring-2 focus:ring-green-500 focus:border-green-500 outline-none transition-all font-mono font-bold text-white placeholder:text-zinc-800">
                                    <div class="absolute right-5 top-1/2 -translate-y-1/2">
                                        <span class="text-sm font-bold text-zinc-600">SHRIMP</span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="pt-6">
                            <button type="submit" class="w-full py-5 bg-green-600 hover:bg-green-500 text-white rounded-[24px] font-bold text-base shadow-2xl shadow-green-900/40 transition-all flex items-center justify-center gap-4 group active:scale-[0.98]">
                                <span class="uppercase tracking-widest">Execute Transaction</span>
                                <i class="fa-solid fa-bolt text-green-300 group-hover:scale-125 transition-transform"></i>
                            </button>
                            <p class="text-center text-[10px] text-zinc-600 mt-6 font-medium">SIGNED SECURELY BY <%= walletDetails.name.toUpperCase() %> PRIVATE KEY</p>
                        </div>
                    </form>
                </div>
            </div>
        <% } else { %>
            <div class="flex flex-col items-center justify-center py-20 bg-zinc-900/40 rounded-3xl border border-zinc-800 border-dashed text-center">
                 <div class="w-16 h-16 bg-zinc-800 rounded-full flex items-center justify-center mb-6">
                    <i class="fa-solid fa-paper-plane text-2xl text-zinc-500 opacity-30"></i>
                 </div>
                 <h2 class="text-2xl font-bold text-white mb-2 tracking-tight">Transfer Locked</h2>
                 <p class="text-zinc-500 text-sm max-w-xs mx-auto mb-6">You need an active wallet to send transactions. Please select one or go to the Wallets page.</p>
                 <a href="/wallets" class="px-8 py-3 bg-zinc-800 hover:bg-zinc-700 text-white rounded-xl font-bold text-xs uppercase tracking-widest transition-all">
                    Open Wallets Cabinet
                 </a>
            </div>
        <% } %>
    </div>
</div>

<%- include('partials/footer') %>
