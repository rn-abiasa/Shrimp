<% 
    const pageTitles = {
        'dashboard': { title: 'Dashboard', icon: 'fa-chart-pie', color: 'text-green-500' },
        'wallets': { title: 'Wallet Manager', icon: 'fa-wallet', color: 'text-green-500' },
        'transfer': { title: 'Quick Transfer', icon: 'fa-paper-plane', color: 'text-green-500' },
        'mining': { title: 'Mining Hub', icon: 'fa-pickaxe', color: 'text-green-500' },
        'settings': { title: 'Node Settings', icon: 'fa-gear', color: 'text-green-500' }
    };
    const current = pageTitles[page] || { title: 'ShrimpChain', icon: 'fa-shrimp', color: 'text-green-500' };
%>

<header class="h-20 flex-shrink-0 flex items-center justify-between px-4 md:px-8 border-b border-zinc-900 bg-zinc-950/50 backdrop-blur-md sticky top-0 z-30">
    <div class="flex items-center gap-4">
        <!-- Hamburger Menu (Mobile) -->
        <button onclick="toggleSidebar()" class="lg:hidden w-10 h-10 bg-zinc-900 rounded-xl flex items-center justify-center border border-zinc-800 text-zinc-400 hover:text-white transition-colors active:scale-90">
            <i class="fa-solid fa-bars"></i>
        </button>

        <div class="w-10 h-10 bg-zinc-900 rounded-xl flex items-center justify-center border border-zinc-800 hidden sm:flex">
            <i class="fa-solid <%= current.icon %> <%= current.color %>"></i>
        </div>
        <div>
            <h1 class="font-bold text-lg text-white leading-none mb-1"><%= current.title %></h1>
            <div class="flex items-center gap-2 text-[10px] font-bold text-zinc-500 uppercase tracking-widest">
                <span>ShrimpChain</span>
                <i class="fa-solid fa-chevron-right text-[8px] opacity-30"></i>
                <span class="text-zinc-400"><%= current.title %></span>
            </div>
        </div>
    </div>

    <div class="flex items-center gap-6">
        <!-- System Alerts/Status -->
        <div class="hidden md:flex items-center gap-4 px-4 py-2 bg-zinc-900/50 rounded-xl border border-zinc-800">
             <div class="flex items-center gap-2">
                <div id="live-api-indicator" class="w-1.5 h-1.5 rounded-full <%= (typeof nodeStatus !== 'undefined' && nodeStatus.connected) ? 'bg-emerald-500 shadow-emerald-500/50' : 'bg-red-500 shadow-red-500/50' %> shadow-sm"></div>
                <span id="live-api-status" class="text-[10px] font-bold text-zinc-400 uppercase tracking-tighter">API: <%= (typeof nodeStatus !== 'undefined' && nodeStatus.connected) ? 'Online' : 'Offline' %></span>
             </div>
             <div class="w-px h-3 bg-zinc-800"></div>
              <div class="flex items-center gap-2">
                <span class="text-[10px] font-bold text-zinc-500 uppercase tracking-tighter">Block: #<span id="live-header-block"><%= (typeof miningData !== 'undefined') ? miningData.height : 0 %></span></span>
             </div>
        </div>
        
        <div class="w-10 h-10 rounded-full bg-zinc-900 border border-zinc-800 flex items-center justify-center text-zinc-500 hover:text-white transition-colors cursor-pointer">
            <i class="fa-solid fa-bell text-sm"></i>
        </div>
    </div>
</header>
